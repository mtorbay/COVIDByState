<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/stateImageID"
            android:background="@android:color/background_dark"
            android:layout_width="90dp"
            android:layout_height="90dp" />


        <TextView
            android:id="@+id/stateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/stateImageID"
            android:paddingLeft="5dp"
            android:text="State"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confirmedCasesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stateID"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/stateImageID"
            android:padding="5dp"
            android:text="Confirmed Cases:" />

        <TextView
            android:id="@+id/deathsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmedCasesID"
            android:layout_toRightOf="@id/stateImageID"
            android:padding="5dp"
            android:text="Deaths: " />

    </RelativeLayout>


</androidx.cardview.widget.CardView>